---
/**
 * Download Fallback Page
 *
 * Purpose:
 * - Shown to desktop users or ambiguous devices
 * - Minimal, distraction-free design
 * - Same dark theme as landing page
 * - Two clear buttons for App Store and Play Store
 *
 * No marketing copy, no distractions.
 */
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Download Mesmer" description="Download Mesmer for iOS or Android">
  <main class="min-h-screen flex flex-col items-center justify-center px-6">
    <div class="max-w-md mx-auto text-center">
      <!-- Simple headline -->
      <h1 class="text-3xl md:text-4xl font-light text-cream-100 mb-12">
        Continue in the app
      </h1>

      <!-- Store buttons -->
      <div class="flex flex-col gap-4">
        <!-- App Store button -->
        <a
          href="https://apps.apple.com/us/app/mesmer-ai-hypnosis-sleep/id6752903286"
          id="ios-btn"
          class="flex items-center justify-center gap-3 px-6 py-4 bg-dark-700 hover:bg-dark-800 border border-cream-100/10 rounded-xl transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-accent/50"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg class="w-8 h-8 text-cream-100" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
          </svg>
          <span class="text-cream-100 font-medium">Download on the App Store</span>
        </a>

        <!-- Play Store button -->
        <a
          href="https://play.google.com/store/apps/details?id=com.mesmerhypnosis.ambitiousdesignlab"
          id="android-btn"
          class="flex items-center justify-center gap-3 px-6 py-4 bg-dark-700 hover:bg-dark-800 border border-cream-100/10 rounded-xl transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-accent/50"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg class="w-8 h-8 text-cream-100" viewBox="0 0 24 24" fill="currentColor">
            <path d="M3.609 1.814L13.792 12 3.61 22.186a.996.996 0 01-.61-.92V2.734a1 1 0 01.609-.92zm10.89 10.893l2.302 2.302-10.937 6.333 8.635-8.635zm3.199-3.198l2.807 1.626a1 1 0 010 1.73l-2.808 1.626L15.206 12l2.492-2.491zM5.864 2.658L16.8 8.99l-2.302 2.302-8.634-8.634z"/>
          </svg>
          <span class="text-cream-100 font-medium">Get it on Google Play</span>
        </a>
      </div>

      <!-- Back link -->
      <a
        href="/"
        class="inline-flex items-center gap-2 mt-12 text-sm text-cream-300 hover:text-cream-100 transition-colors duration-300"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to Mesmer
      </a>
    </div>
  </main>
</BaseLayout>

<script>
  // Analytics hooks for download page
  const iosBtn = document.getElementById('ios-btn');
  const androidBtn = document.getElementById('android-btn');

  iosBtn?.addEventListener('click', () => {
    console.log('[Analytics] Download page: iOS App Store clicked');
  });

  androidBtn?.addEventListener('click', () => {
    console.log('[Analytics] Download page: Google Play clicked');
  });
</script>
